<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_search_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/all_rounded_rectangle_stroke_border"
    android:padding="@dimen/dim_20_dp">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_line_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_menu_black_24dp" />

     <com.mcompany.coupan.views.AppTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dim_20_dp"
        android:layout_toRightOf="@id/iv_line_icon"
        android:text="@string/search_deal"
        android:textColor="@color/bw_7"
        android:textSize="@dimen/text_large"
        app:fontFamily="@string/light"
        app:fontName="regular" />


    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_notification_icon"
        android:layout_width="@dimen/dim_24_dp"
        android:layout_height="@dimen/dim_24_dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_notifications_none_black_24dp" />


    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_search_icon"
        android:layout_width="@dimen/dim_20_dp"
        android:layout_height="@dimen/dim_20_dp"
        android:layout_marginRight="@dimen/dim_20_dp"
        android:layout_toLeftOf="@+id/iv_notification_icon"
        android:src="@drawable/ic_search" />

</RelativeLayout>
