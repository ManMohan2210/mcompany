<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/dim_5_dp"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dim_5_dp">

        <ImageView
            android:id="@+id/iv_deals_image"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:src="@drawable/mmt" />

        <com.mcompany.coupan.views.AppTextView
            android:id="@+id/tv_best_deals_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_deals_image"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/dim_5_dp"
            android:text="Make My trip Offers On air Tickets: Grab Rs 800 Off On Domestic Flights"
            android:textColor="@color/bw_5"
            android:textSize="@dimen/text_large"
            app:fontFamily="@string/light"
            app:fontName="light" />

        <com.mcompany.coupan.views.AppTextView
            android:id="@+id/tv_best_deals_end_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_best_deals_label"
            android:layout_margin="@dimen/dim_5_dp"
            android:text="Ends on 30 Jun 2018"
            android:textColor="@color/bw_7"
            android:textSize="@dimen/text_small_large"
            app:fontFamily="@string/light"
            app:fontName="light" />

    </RelativeLayout>
</android.support.v7.widget.CardView>